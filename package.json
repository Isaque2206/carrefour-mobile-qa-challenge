{
  "name": "carrefour-mobile-qa-challenge",
  "version": "1.0.0",
  "private": true,
  "description": "Desafio Mobile - WebdriverIO + Appium + Mocha + Chai + Allure",
  "scripts": {
    "doctor": "npx @appium/doctor --android --ios || true",
    "test:android:local": "wdio run wdio.android.local.conf.js",
    "test:android:ci": "wdio run wdio.android.local.conf.js",
    "test:ios:local": "wdio run wdio.ios.local.conf.js",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate",
    "allure:serve": "allure serve allure-results"
  },
  "devDependencies": {
    "@appium/doctor": "^2.0.0",
    "@wdio/allure-reporter": "^9.1.5",
    "@wdio/appium-service": "^9.1.5",
    "@wdio/cli": "^9.1.5",
    "@wdio/local-runner": "^9.1.5",
    "@wdio/mocha-framework": "^9.1.5",
    "@wdio/spec-reporter": "^9.1.5",
    "allure-commandline": "^2.27.0",
    "appium": "^2.12.1",
    "appium-uiautomator2-driver": "^2.45.1",
    "chai": "^4.4.1",
    "mocha": "^10.6.0",
    "webdriverio": "^9.1.5"
  }
}
